<h2 class = "text-center">Wikis</h2><br><br>
<div class="row">
        <div class="col-md-2">
         <% if policy(Wiki.new).create? %>
          <p class="text-center"><%= link_to "New Wiki", new_wiki_path, class: 'btn btn-primary' %></p>
         <% end %>
        </div>
        <div class="col-md-8 center-table">
          <table class="table table-striped table-bordered table-condensed table-hover" width="647">
            <thead>
            <tr class="text-center"> 
               <td><strong> Public Wikis </strong></td>
               <td></td>
               <td></td>
            </tr>
            </thead>
            <% @wikis.each do |wiki| %>
            <% if wiki.private != true %>
            <tr class="text-center">
              <td><%= link_to wiki.title, wiki_path(wiki.id) %></td> 
              <td><%= link_to "Edit", edit_wiki_path(wiki.id) %></td>
              <td><%= link_to "Delete", wiki_path(wiki.id), method: :delete %> </td>
            </tr>
            <% end %>
            <% end %> 
          </table>
          <% if current_user.role == "premium" %>
          <table class="table table-striped table-bordered table-condensed table-hover" width="647">
            <thead>
            <tr class="text-center"> 
               <td><strong> Private Wikis </strong></td>
               <td></td>
               <td></td>
            </tr>
            </thead>
            <% @wikis.each do |wiki| %>
            <% if wiki.private == true && wiki.user_id == current_user.id || current_user.role == "admin" %>
            <tr class="text-center">
              <td><%= link_to wiki.title, wiki_path(wiki.id) %></td> 
              <td><%= link_to "Edit", edit_wiki_path(wiki.id) %></td>
              <td><%= link_to "Delete", wiki_path(wiki.id), method: :delete %> </td>
            </tr>
            <% end %>
            <% end %> 
          </table>
          <% end %>
          <% if current_user.role == "admin" %>
          <table class="table table-striped table-bordered table-condensed table-hover" width="647">
            <thead>
            <tr class="text-center"> 
               <td><strong> All Private Wikis </strong></td>
               <td></td>
               <td></td>
            </tr>
            </thead>
            <% @wikis.each do |wiki| %>
            <% if wiki.private == true %>
            <tr class="text-center">
              <td><%= link_to wiki.title, wiki_path(wiki.id) %></td> 
              <td><%= link_to "Edit", edit_wiki_path(wiki.id) %></td>
              <td><%= link_to "Delete", wiki_path(wiki.id), method: :delete %> </td>
              <td><%= wiki.user_id %> </td>
            </tr>
            <% end %>
            <% end %> 
          </table>
          <% end %>
        </div>
      </div>
      <div class="col-md-2">
      </div>
      <br>
      












        

  






